<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Header / Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FF5733"
        android:text="Football News"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium" />

    <!-- Main Content Area / News List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title">

        <LinearLayout
            android:id="@+id/news_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- News Item 1 -->
            <LinearLayout
                android:id="@+id/news_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/gasing"
                    android:contentDescription="News Image 1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Manchester United Kalah di Pertandingan Terkini"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- News Item 2 -->
            <LinearLayout
                android:id="@+id/news_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/madrid"
                    android:contentDescription="News Image 2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Transfer Pemain Terbaru: Real Madrid"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- News Item 3 -->
            <LinearLayout
                android:id="@+id/news_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/timnas"
                    android:contentDescription="News Image 3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Prediksi Pertandingan Indonesia Melawan Arab Saudi"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- News Item 4 -->
            <LinearLayout
                android:id="@+id/news_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/liverpool"
                    android:contentDescription="News Image 4" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Liverpool Menang Dramatis di Injury Time"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- News Item 5 -->
            <LinearLayout
                android:id="@+id/news_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/haaland"
                    android:contentDescription="News Image 5" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Erling Haaland Pecahkan Rekor Gol Liga Inggris"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- News Item 6 -->
            <LinearLayout
                android:id="@+id/news_item_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/barcelona"
                    android:contentDescription="News Image 6" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Barcelona Juara La Liga 2024"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>